{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessLoneBlockStatements": "off",
				"noForEach": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"noUnreachable": "off"
			},
			"a11y": {
				"noNoninteractiveTabindex": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": ["**/public/**"]
	}
}
